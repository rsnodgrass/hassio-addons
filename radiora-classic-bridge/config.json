{
  "name": "RadioRA Classic Smart Bridge",
  "version": "1.2.0",
  "slug": "radiora-classic-bridge",
  "description": "Communication interface to Lutron RadioRA Classic RS232 hardware interfaces",
  "url": "https://github.com/rsnodgrass/hassio-addons/tree/master/radiora-classic-bridge",
  "startup": "services",
  "boot": "auto",
  "ports": {
    "8333/tcp": 8333
  },
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "auto_uart": true,
  "options": {
    "serial_tty": "/dev/ttyUSB0"
  },
  "schema": {
    "serial_tty": "match(^/dev/.*$)?"
  },
  "environment": {
    "RADIORA_BRIDGE_PORT": "",
    "RADIORA_BRIDGE_TTY": ""
  },
  "map": [
    "config:ro"
  ],
  "hassio_role": "default",
  "host_network": false,
  "gpio": true,
  "auto_uart": true,
  "devices": [ "/dev/ttyAMA0:/dev/ttyAMA0:rwm",
	       "/dev/ttyUSB0:/dev/ttyUSB0:rwm"
  	     ],
  "privileged": [ "SYS_RAWIO" ]
}
